# Backend Environment Variables Example
# Copy this file to .env and fill in your values

# Server Port
PORT=4000

# MongoDB Connection String
MONGO_URI=your_mongodb_connection_string_here

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Email Configuration
EMAIL=your_email_here
PASS=your_email_app_password_here

# Razorpay Configuration
RZP_KEY_ID=your_razorpay_key_id_here
RZP_KEY_SECRET=your_razorpay_key_secret_here

# Email Verification API
EMAIL_VERIFICATION_API_KEY=your_abstract_api_key_here

# Base URLs for different environments
BASE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
# For production, set these to your deployed URLs:
# BASE_URL=https://your-backend-deployment-url.com
# FRONTEND_URL=https://your-frontend-deployment-url.com

# CORS Origin (for production deployment)
CORS_ORIGIN=*

# API Variable (if needed)
API_VARI=your_api_variable_here